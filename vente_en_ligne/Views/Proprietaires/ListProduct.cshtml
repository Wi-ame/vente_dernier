    <link href="/css/styleP.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar">
                <img src="~/img/e-commerce.png" class="image" />
                <div class="navbar-nav w-100">

                    <a href="#" class="nav-item nav-link"><i class="far fa-smile fa-lg me-2"></i>Welcome Owner</a>
                    <a href="#" class="nav-item nav-link" onclick="loadContentProduct('CreatePr')"> <i class="fas fa-plus "></i><span class="icon-text">Add Product</span></a>
                    <a href="#" class="nav-item nav-link" onclick="loadContentProduct('RemovePr')">  <i class="fas fa-trash "></i><span class="icon-text">Remove Product</span></a>
                    <a href="#" class="nav-item nav-link" onclick="loadContentProduct('ModifyProduct')">  <i class="fas fa-pencil-alt "></i> <span class="icon-text">Update Product</span></a>
                    <a href="#" class="nav-item nav-link" onclick="loadContent('Rechercher')"><i class="fa fa-chart-line "></i><span class="icon-text">View Products</span></a>
                </div>
        </div>
        </nav>
    </div>
    <!-- Sidebar End -->
    <!-- Content Start -->
    <div class="content">
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand  navbar-dark sticky-top px-4 py-0">
            <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                <h2 class="text-primary mb-0"><i class="fa fa-user-edit"></i></h2>
            </a>
            <a href="#" class="sidebar-toggler flex-shrink-0">
                <i class="fa fa-bars"></i>
            </a>
            <div class="navbar-nav align-items-center ms-auto">
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                        <img class="rounded-circle me-lg-2" src="/img/profil.png" alt="" style="width: 40px; height: 40px;">
                        <span class="d-none d-lg-inline-flex">@username</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end border-0 rounded-0 rounded-bottom m-0">
                        <a href="@Url.Action("Index", "Home")" class="dropdown-item">Log Out</a>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Widgets End -->
        <div id="main-content">
            <div id="elm">
                <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css" rel="stylesheet">
                <link href="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.7.0/dt-1.13.8/b-2.4.2/fc-4.3.0/sc-2.3.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/datatables.min.css" rel="stylesheet">
                <table class="table">
                    <thead>
                        <tr>
                            <th id="hed">Product Id</th>
                            <th id="hed">Product Name</th>
                            <th id="hed">Product Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="ligne">
                                <td>@item.IdPr</td>
                                <td>@item.Name</td>
                                <td>@item.prix</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Le contenu des vues partielles sera chargé ici -->
        </div>

    </div>


    <!-- Ajoutez cette balise script à la fin de votre page HTML, juste avant la balise </body> -->
    </div>

    <!-- JavaScript Libraries -->

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/chart/chart.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
