        </div>

        <!-- Contrôles pour naviguer à travers les slides -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>

    <div id="filtre">
        <form asp-action="FilterByPrice" method="post" id="formFiltre">
            <label for="minPrice">Minimum Price:</label>
            <input id="field" type="number" step="0.01" name="minPrice" />
            <label for="maxPrice">Maximum Price:</label>
            <input id="field" type="number" step="0.01" name="maxPrice" />
            <input type="submit" value="Filter" />
        </form>
    </div>
    <div id="product-list-container" class="row">
        @foreach (var produit in Model)
        {
            <div class="col-md-4">
                <div class="product">
                    <div class="product-img">
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(produit.ImageData)"
                             alt="Produit Image"
                             style="width: 100%; height: 300px; object-fit: cover;">
                        @if (produit.DateDepot.Date == DateTime.Today)
                        {
                            <div class="product-label">
                                <span class="sale">-30%</span>
                                <span class="new">NEW</span>
                            </div>
                        }

                    </div>
                    <div class="product-body">
                        <h3 class="product-name">@produit.Name</h3>
                        <h4 class="product-price">Price: @produit.prix</h4>
                        <div class="product-btns">
                            <a asp-controller="Produits" asp-action="Details" asp-route-id="@produit.IdPr">
                                <i class="fa fa-eye"></i>
                                <span class="tooltipp">quick view</span>
                            </a>
                        </div>
                    </div>
                    <div class="add-to-cart">
                        <form method="post" asp-controller="Paniers" asp-action="AjouterAuPanier">
                            <input type="hidden" name="idProduit" value="@produit.IdPr" />
                            <button type="submit" class="add-to-cart-btn">
                                <i class="fa fa-shopping-cart"></i> add to cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>


        }
