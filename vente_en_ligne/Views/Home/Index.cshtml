    <style>
        /* Styles pour le carousel */
        .carousel {
            width: 100%; /* Ajustez la largeur du carousel */
            margin: auto;
            overflow: hidden; /* Cache les éléments dépassant de la hauteur fixée */
        }

        .carousel-inner {
            display: flex;
            flex-direction: column;
            align-items: center; /* Centre verticalement les éléments */
            justify-content: center; /* Centre horizontalement les éléments */
            width: 100%;
            height: 430px; /* Hauteur souhaitée */
        }

            .carousel-inner .item {
                display: none; /* Masque tous les éléments */
            }

            .carousel-inner .active {
                display: block; /* Affiche uniquement l'élément actif */
            }

            .carousel-inner img {
                max-width: 100%;
                max-height: 100%; /* Ajuste la hauteur de l'image à 100% de la hauteur du carousel */
                width: auto;
                height: auto;
            }

        .carousel-indicators {
            position: absolute;
            bottom: 0px;
            left: 50%;
            transform: translateX(0%);
            z-index: 15;
        }

            .carousel-indicators li {
                background-color: #fff;
                border: 1px solid #ccc;
                border-radius: 50%;
                width: 10px;
                height: 10px;
                margin: 0 5px;
                cursor: pointer;
            }

            .carousel-indicators .active {
                background-color: #B3C0E5;
            }

        .row {
            margin-left: 40px;
        }

        .aside {
            margin-left: 30px
        }

        #filtre {
            padding-bottom:5px;
            margin-left: 150px;
            margin-top: 60px;
            display: flex;
            justify-content: space-between;
            max-width: 1000px;
            font-family: 'Berlin Sans FB';
            background: #001f3f;
            /* Border radius */
            border-radius: 10px;
            /* Border color and width */
            border: 2px solid #D41818; /* You can change the color to your preference */
        }


        #formFiltre {
            display: flex;
            margin-left: 90px;
        }

        label {
            margin-right: 15px;
            color: #fff;
            font-size: 16px;
            margin-top: 10px;
            font-family: 'Berlin Sans FB';
        }
        #field{
            padding:0px;
        }
        input[type="number"] {
            padding: 8px;
            margin-right: 30px;
            margin-top:10px;
            height: 25px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            transition: border-color 0.3s;
        }

            input[type="number"]:focus {
                border-color: #D41818;
            }

        input[type="submit"] {
            margin-left:150px;
            background-color: #D41818;
            color: #fff;
            margin-top:7px;
            height:30px;
            width:100px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
            font-family: 'Berlin Sans FB';
            font-size: 16px;
        }

            input[type="submit"]:hover {
                background-color: #971111;
            }

        #product-list-container {
            display: flex;
            flex-wrap: wrap;
            margin:12px;
            margin-bottom:100px;
        }

        /* Autres styles spécifiques au besoin */
    </style>
